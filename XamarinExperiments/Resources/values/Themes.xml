<?xml version="1.0" encoding="UTF-8" ?>

<resources>
	
	<!-- Splash Screen Theme -->
<!--	<style name="Splash" parent="android:Theme">
	    <item name="android:windowBackground">@drawable/splash</item>
	    <item name="android:windowNoTitle">true</item>
  	</style>-->

  	<!-- Jobrapido default Theme -->
	<style name="Jobrapido" parent="android:Theme.Holo.Light">
		<item name="android:colorBackground">@color/light_grey</item>
	    <item name="android:windowBackground">@color/light_grey</item>
	    <item name="android:colorBackgroundCacheHint">@color/light_grey</item>
	    <item name="android:windowNoTitle">true</item>

	    <item name="android:colorPressedHighlight">@color/light_blue</item>
		<item name="android:colorLongPressedHighlight">@color/light_blue</item>
		<item name="android:colorFocusedHighlight">@color/light_blue</item>
		<item name="android:colorMultiSelectHighlight">@color/light_blue</item>
		<item name="android:colorActivatedHighlight">@color/light_blue</item>
		<item name="android:textColorHighlight">@color/light_blue</item>
		<item name="android:textColorHighlightInverse">@color/medium_grey</item>
	</style>

	<!-- Jobrapido search Theme -->
	<style name="Jobrapido.Search" parent="Jobrapido">
		<item name="android:windowNoTitle">false</item>
	</style>

	<!-- Jobrapido result Theme -->
	<style name="Jobrapido.Result" parent="android:Theme.Light">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	    <item name="android:divider">@color/light_grey</item>
	    <item name="android:dividerHeight">5dp</item>
	</style>

	<!-- Jobrapido recent searches Theme -->
	<style name="Jobrapido.Recent.Searches" parent="android:Theme.Light">
		<item name="android:layout_marginTop">0.0dp</item>
		<item name="android:layout_marginLeft">20dp</item>
	    <item name="android:layout_marginRight">20dp</item>
	    <item name="android:layout_marginBottom">15dp</item>
	    <item name="android:divider">@color/dark_grey</item>
	    <item name="android:dividerHeight">1px</item>
	</style>

	<!-- Jobrapido advert result item Theme -->
	<style name="Jobrapido.Result.Item" parent="android:Theme.Light">
		<item name="android:colorBackground">@color/white</item>
	    <item name="android:windowBackground">@color/white</item>
	    <item name="android:colorBackgroundCacheHint">@color/white</item>
	    <item name="android:padding">@dimen/advert_result_item_padding</item>
	</style>


	<!-- Jobrapido Tabs style -->
	<style name="Jobrapido.TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
		<item name="android:colorBackground">@color/light_grey</item>
	    <item name="android:windowBackground">@color/light_grey</item>
	    <item name="android:colorBackgroundCacheHint">@color/light_grey</item>
	</style>


	<!-- Jobrapido Home Logo -->
	<style name="Jobrapido.Home.Logo" parent="@style/Jobrapido">
	    <item name="android:padding">@dimen/search_logo_padding</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>

	<!-- Jobrapido Result Logo -->
	<style name="Jobrapido.Result.Logo" parent="@style/Jobrapido">
	    <item name="android:padding">@dimen/result_logo_padding</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>




	<!-- Jobrapido Typo Base -->
	<style name="Jobrapido.Font">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/medium_grey</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Jobrapido.Font.Small" parent="@style/Jobrapido.Font">
		<item name="android:textSize">12sp</item>
    </style>

    <style name="Jobrapido.Font.Big" parent="@style/Jobrapido.Font">
		<item name="android:textSize">16sp</item>
    </style>

    <!-- Jobrapido Typo Result Item Description -->
	<style name="Jobrapido.Font.Result.Item.Description" parent="@style/Jobrapido.Font">
		<item name="android:textSize">12sp</item>
    </style>

	<!-- Jobrapido Typo Result Item Title -->
	<style name="Jobrapido.Font.Result.Item.Title" parent="@style/Jobrapido.Font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item> 
    </style>

    <!-- Jobrapido Typo Recent Searches Title -->
	<style name="Jobrapido.Font.Recent.Searches.Title" parent="@style/Jobrapido.Font">
		<item name="android:textColor">@color/light_blue</item>
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:layout_marginBottom">5.0dp</item>
		<item name="android:layout_marginTop">10dp</item>

    </style>

    <!-- Jobrapido Typo Recent Searches Description -->
    <style name="Jobrapido.Font.Recent.Searches.Description" parent="@style/Jobrapido.Font.Big">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Jobrapido.Font.Recent.Searches.Description.Complete" parent="@style/Jobrapido.Font.Big">
        <item name="android:textColor">@color/dark_grey</item>
    </style>





    <!-- Jobrapido Search button -->
    <style name="Jobrapido.Search.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/search_button_margin</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

</resources>